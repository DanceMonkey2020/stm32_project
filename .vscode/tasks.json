{
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceFolder}/build"
    },
    "tasks": [
        {
            "label": "clean",
            "type": "shell",
            "command": "rm * -r"
        },
        {
            "label": "cmake",
            "type": "shell",
            "command": "cmake",
            "args": [ 
                "-G",
                "MinGW Makefiles",
                "..",       
                "-DDEVICE_TYPE=STM32F407ZGTX"            
            ],
            "dependsOn": [
                "clean",
            ]
        },

        {
            "label": "make",
            "type": "shell",
            // "command": "make -j10",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "rebuild",
            "dependsOrder": "sequence",
            "dependsOn": [
                "cmake",
                "make"
            ],
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "download",
            "command": "openocd",
            "args": [
                // "-f",
                // "../scripts/stlink-dap.cfg",
                // "-f",
                // "../scripts/openocd_target.cfg",
                "-f",
                "../scripts/cmsis-dap.cfg",
                "-f",
                "../scripts/openocd_target.cfg",
                "-c",
                "init",
                "-c",
                "halt",
                "-c",
                "program app.bin 0x8000000",
                "-c",
                "reset",
                "-c",
                "shutdown"
            ],
            "group": "build",
            "dependsOn": "make"
        }

    ]
}